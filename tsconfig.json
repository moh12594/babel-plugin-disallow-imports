{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "useDefineForClassFields": false,
    "outDir": "./lib"
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["./tests/fixtures/**/*", "./tests/**/*"]
}